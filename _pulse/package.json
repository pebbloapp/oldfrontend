{
  "name": "pulse-framework",
  "version": "3.1.0",
  "description": "Global state and logic framework for reactive JavaScript & TypeScript applications.",
  "main": "./index.js",
  "types": "./index.d.ts",
  "module": "pulse-framework",
  "author": "Jamie Pine",
  "license": "MIT",
  "syncDir": "dist",
  "repository": {
    "type": "git",
    "url": "https://github.com/pulse-framework/pulse"
  },
  "scripts": {
    "build": "yarn cleanup && webpack --config ./config/webpack.config.prod.js && yarn cleanup --post",
    "dev": "yarn cleanup && webpack --config ./config/webpack.config.dev.js",
    "cleanup": "node ./scripts/cleanup.js",
    "prep": "yarn build && cp package.json README.md .gitignore ./dist",
    "prep:publish": "yarn prep && yarn publish ./dist",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs --dest ./docs/dist/",
    "now-build": "yarn run docs:build",
    "typecheck": "tsc --noEmit",
    "test": "mocha -r ts-node/register --r jsdom-global/register --exit test/**/*.spec.ts",
    "test:debug": "mocha -r ts-node/register --r jsdom-global/register --inspect-brk test/**/*.spec.ts",
    "test:react": "(cd ./examples/react-typescript && yarn start)"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.2",
    "@types/node": "^14.6.4",
    "@types/webpack": "^4.41.22",
    "chai": "^4.2.0",
    "dts-bundle-webpack": "^1.0.2",
    "eslint-config-prettier": "^6.11.0",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^8.1.1",
    "mock-local-storage": "^1.1.15",
    "prettier": "2.0.5",
    "terser-webpack-plugin": "^4.1.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^8.10.2",
    "tsc-watch": "^4.1.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.7",
    "uglify-js": "^3.10.3",
    "vuepress": "^1.5.4",
    "webpack": "^5.0.0-beta.29",
    "webpack-cli": "^3.3.12"
  }
}
